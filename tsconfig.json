{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}
